
<% @songs.each do |song| %>
  <div class="song">
    <form method="put" action="/songs/<%=song.id%>/upvote">
      <input type="submit" value="UP VOTE" >
    </form>
    <h4><%= song.vote_histories.count%> </h4>
    <p><%=song.song_title%><small> (by:<%=song.author%>)</small></p>
    <% unless song.url.empty? %>
      <p>
      <a href="<%= song.url %>">Link to Song</a>
      </p>

    <% end %>
    <p> Created at: <%= song.created_at %> by <%= get_user_name(song.user_id) %> </p>
  </div>
  <hr/>
<% end %>
